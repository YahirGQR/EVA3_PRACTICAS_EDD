    private void imprimirLista(){
        String cadena = "   ";
        
        for (byte i = 0; i < cont; i++) {
            cadena = cadena + lista[i] + "\n   ";
            txtLista.setText(cadena);
        }
    }
    private void calcularPromedio(){
        float suma = 0;
        
        for (byte i = 0; i < cont; i++) 
             suma = suma + lista[i];
        txtLista.append(suma/cont + "");
    }
    
    
    private void btnCapturarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        int num;
        
        if(cont < n){
            num = Integer.parseInt(JOptionPane.showInputDialog(null, "Escriba un valor: "));
            lista[cont] = num;
            cont ++;
            imprimirLista();
            calcularPromedio();
        }else
            JOptionPane.showMessageDialog(null, "No hay lugar en el arreglo");
    }                                           

