    private void btnAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
        String texto = JOptionPane.showInputDialog(this, "Escribe algo: ");
                
        if(l.agregarElemento(texto)){
          JOptionPane.showMessageDialog(this, "Si se mostro");
          txaElemento.setText(l.obtenerElementos());
        }else
          JOptionPane.showMessageDialog(this, "No se mostro");
        
    }                                          

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(l.borrarElemento()){
          JOptionPane.showMessageDialog(this, "Se borro el elemento correctamente");
          txaElemento.setText(l.obtenerElementos());
        }else
          JOptionPane.showMessageDialog(this, "No existen elementos para borrar");
    }                                         

